@using VirtoCommerce.Web.Client.Extensions
<!DOCTYPE html>
<html>
<head lang="en">
    @Html.FrontHtml().HtmlTitle()
    @Html.FrontHtml().Meta()
    @Html.FrontHtml().RegisterStyles()
    @Html.FrontHtml().RegisterScripts()
    <script src="@Url.FrontUrl().ScriptFileUrl("v/virto-commerce.js")" type="text/javascript"></script>
    <script src="@Url.FrontUrl().ScriptFileUrl("v/virto-jquery.js")" type="text/javascript"></script>
    
    <base href="~/" />
</head>
<body class="cms-index-index cms-home" sitePath="@Url.Content(Url.FrontUrl().Site.VirtualPath)">
    <p class="demo-notice">
        This is a demo store. Any orders placed through this store will not be honored or
      fulfilled.

	
    </p>
    <div class="page">
        <div class="header-container">
            <div class="header">
                <a href="@Url.Content("~/")" title="Demo Store" class="logo"><strong>Virto Commerce</strong><img src="@Url.FrontUrl().ThemeFileUrl("images/logo.png")"
                                                                                                                 alt="Virto Commerce" /></a>

                <p class="top-promo">
                    @{Html.RenderAction("ShowDynamicContent", "Banner", new { area = "VirtoCommerce", placeName = "TopPromo" });}
                </p>
                <div class="nav-container">
                    <ul id="nav">
                        @*@foreach (var item in MenuHelper.Sub(PageHelper.Parse(Site.Current,"Home")))
							{
								if (item.Navigation.Show)
								{ 
									<li class ='level0'>
										@Html.FrontHtml().PageLink(item.LinkText, item.FullName,null,new{@class="drop"})
									</li>
								}
							}*@
                        <li class='level0'>
                            @Html.FrontHtml().PageLink("TV & Video", "Catalog", new { url = "tv-video" }, new { @class = "drop" })
                        </li>
                        <li class='level0'>
                            @Html.FrontHtml().PageLink("Audio & MP3", "Catalog", new { url = "audio-mp3" }, new { @class = "drop" })
                        </li>
                        <li class='level0'>
                            @Html.FrontHtml().PageLink("Cameras", "Catalog", new { url = "cameras" }, new { @class = "drop" })
                        </li>
                        <li class='level0'>
                            @Html.FrontHtml().PageLink("Computers & Tablets", "Catalog", new { url = "computers-tablets" }, new { @class = "drop" })
                        </li>
                        <li class='level0'>
                            @Html.FrontHtml().PageLink("Accessories", "Catalog", new { url = "accessories" }, new { @class = "drop" })
                        </li>
                    </ul>
                </div>
            </div>
            
            @{Html.RenderAction("QuickAccess", "Store", new { area = "VirtoCommerce" });}
			
            <div class="top-bar">
                @Html.FrontHtml().RenderView("Shared.Search")
            </div>
        </div>
        @RenderBody()
        <div class="footer-container">
            <div class="footer">
                <div class="f-right">
                  @{Html.RenderAction("StorePicker", "Store", new {area = "VirtoCommerce"});}
                </div>
                <div class="f-left">
                    <ul>
                        <li><a href="#">@("About Us".Localize())</a></li>
                        <li class="last">
                            <a href="#">@("Customer Service".Localize())</a>
                        </li>
                    </ul>
                    <ul class="links">
                        <li class="first"><a href="#" title="Site Map">Site Map</a></li>
                        <li><a href="#" title="Search Terms">Search Terms</a></li>
                        <li><a href="#" title="Advanced Search">Advanced Search</a></li>
                        <li><a href="#" title="Contact Us">Contact Us</a></li>
                        <li class=" last"><a href="#" title="RSS" class="link-rss">RSS</a></li>
                    </ul>
                    <form action="#" method="post"
                          id="newsletter-validate-detail">
                        <div class="form-subscribe">
                            <label for="newsletter">
                                Newsletter Sign-up:</label>
                            <div class="input-box">
                                <input type="text" name="email" id="newsletter" title="Sign up for our newsletter"
                                       class="input-text required-entry validate-email" />
                            </div>
                            <button type="submit" title="Submit" class="button">
                                <span><span>Submit</span></span></button>
                        </div>
                    </form>
                                        <p class="bugs">
                        @("Version:".Localize()) @Html.Version() - <a href="http://support.virtocommerce.com"
                                                                          onclick="this.target='_blank'"><strong>@("Report Issues".Localize())</strong></a>
                    </p>
                    <address>
                        <a href="http://virtocommerce.com" target="_blank">@("© 2013 VirtoCommerce Demo Store. All Rights Reserved.".Localize())</a>
                    </address>

                </div>
            </div>
        </div>
    </div>
    <div class="virto-brand-container">
        <div class="virto-brand">
            <a href="http://www.virtocommerce.com"><img alt="VirtoCommerce" src="@Url.FrontUrl().ThemeFileUrl("images/brand.png")"></a>
            <h4><a href="http://www.virtocommerce.com">@("Powered by".Localize())<br/>@("Virto Commerce".Localize())</a></h4>
        </div>
    </div>
</body>
</html>
