 @model VirtoCommerce.Web.Models.GiftMessageModel
<ul class="no-padding">
    <li>
        <div class="input-box">
            <label for="gift-message-whole-from">
                @("From".Label())</label><br/>
            @Html.TextBoxFor(m => m.From, new { @class = "input-text" })
            @Html.ValidationMessageFor(m => m.From)
        </div>
        <div class="input-box input-box-last">
            <label for="gift-message-whole-to">
                 @("To".Label())</label><br/>
            @Html.TextBoxFor(m => m.To, new { @class = "input-text" })
            @Html.ValidationMessageFor(m => m.To)
        </div>
    </li>
    <li>
        <label for="gift-message-whole-message">
             @("Message".Label())</label>
        <br/>
        @Html.TextAreaFor(m => m.Message, new { @class = "input-text giftmessage-area", cols = "40", rows = "5" })
        @Html.ValidationMessageFor(m => m.Message)
    </li>
</ul>
