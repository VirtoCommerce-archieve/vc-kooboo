@model VirtoCommerce.Foundation.Orders.Model.Order

@if ((string)ViewData["View"] == "Default")
{
    <div class="page-title">
        <h1>@("Order".Localize()) #@Model.TrackingNumber - @Model.Status.Localize()</h1>
    </div>
    <div class="title-buttons">
        <span class="nobr">
            @Html.ActionLink("Reorder", "Reorder", new { orderId = Model.OrderGroupId, @class = "link-reorder" })
            <span class="separator">|</span>
            @Html.ActionLink("Return", "OrderReturn", new { orderId = Model.OrderGroupId })
            <span class="separator">|</span>
            <a href="#" class="link-print" onclick="$.popup('@Url.Action("PrintOrder", new { orderId = Model.OrderGroupId })'); return false;">@("Print".Localize())</a>
        </span>
    </div>
}
<dl class="order-info">
    <dt>@("About This Order:".Localize())</dt>
    <dd>
        <ul id="order-info-tabs">
            <li class="current first last">@("Order Information".Localize())</li>
        </ul>
    </dd>
</dl>
<p class="order-date">@("Order Date:".Localize()) @Model.Created.Value.ToString("MMMM d, yyyy")</p>
<div class="col2-set order-info-box">
    <div class="col-1">
        <div class="box">
            <div class="box-title">
                <h2>@("Shipping Address".Localize())</h2>
            </div>
            <div class="box-content">
                @{Html.RenderAction("OrderAddress", new { order = Model, type = "shipping" });}
            </div>
        </div>
    </div>
    <div class="col-2">
        <div class="box">
            <div class="box-title">
                <h2>@("Shipping Method".Localize())</h2>
            </div>
            <div class="box-content">
                @if (Model.OrderForms != null && Model.OrderForms.Count > 0 && Model.OrderForms[0].Shipments != null && Model.OrderForms[0].Shipments.Count > 0)
                {
                    @Model.OrderForms[0].Shipments[0].ShippingMethodName
                }
            </div>
        </div>
    </div>
</div>
<div class="col2-set order-info-box">
    <div class="col-1">
        <div class="box">
            <div class="box-title">
                <h2>@("Billing Address".Localize())</h2>
            </div>
            <div class="box-content">
                @{Html.RenderAction("OrderAddress", new { order = Model, type = "billing" });}
            </div>
        </div>
    </div>
    <div class="col-2">
        <div class="box box-payment">
            <div class="box-title">
                <h2>@("Payment Method".Localize())</h2>
            </div>
            <div class="box-content">
                <p>@("Check / Money order".Localize())</p>
                <p><strong>@("Make Check payable to:".Localize())</strong> Nobody</p>
                <p><strong>@("Send Check to:".Localize())</strong></p>
                <address class="checkmo-mailing-address">
                    @("Please do not send anything this is a test store!!!".Localize())       
                </address>
            </div>
        </div>
    </div>
</div>
<div class="order-items order-details">
    <h2 class="table-caption">@("Items Ordered".Localize())</h2>

    <table class="data-table" id="my-orders-table" summary="Items Ordered">
        <colgroup>
            <col>
            <col width="1">
            <col width="1">
            <col width="1">
            <col width="1">
        </colgroup>
        <thead>
            <tr class="first last">
                <th>@("Product Name".Localize())</th>
                <th>@("SKU".Localize())</th>
                <th class="a-right">@("Price".Localize())</th>
                <th class="a-center">@("Qty".Localize())</th>
                <th class="a-right">@("Subtotal".Localize())</th>
            </tr>
        </thead>
        <tfoot>
            <tr class="subtotal first">
                <td colspan="4" class="a-right">@("Subtotal".Localize())</td>
                <td class="last a-right">
                    <span class="price">@StoreHelper.FormatCurrency(Model.Subtotal, Model.BillingCurrency)</span></td>
            </tr>
	        <tr class="shipping">
		        <td colspan="4" class="a-right">
			        @("Shipping &amp; Handling".Localize())
		        </td>
		        <td class="last a-right">
			        <span class="price">@StoreHelper.FormatCurrency(Model.ShippingTotal, Model.BillingCurrency)</span>
		        </td>
	        </tr>
			<tr class="shipping">
	            <td colspan="4" class="a-right">
		            @("Tax total".Localize())
	            </td>
                <td class="last a-right">
	                <span class="price">@StoreHelper.FormatCurrency(Model.TaxTotal, Model.BillingCurrency)</span>
                </td>
            </tr>
            <tr class="grand_total last">
                <td colspan="4" class="a-right">
                    <strong>@("Grand Total".Localize())</strong>
                </td>
                <td class="last a-right">
                    <strong><span class="price">@StoreHelper.FormatCurrency(Model.Total, Model.BillingCurrency)</span></strong>
                </td>
            </tr>
        </tfoot>
        <tbody class="odd">

            @foreach (var orderForm in Model.OrderForms)
            {
                foreach (var lineItem in orderForm.LineItems)
                {
                @Html.DisplayFor(m => lineItem, "LineItem")
                }
            }
        </tbody>
    </table>
    <div class="buttons-set">
        <p class="back-link">

            <a href="@Url.Action("Orders")"><small>« </small>@("Back to My Orders".Localize())</a>
        </p>
    </div>
</div>
