@model ICollection<AuthenticationClientData>
@if (Model.Count == 0)
{
    <div class="message-info">
        <p>@(@"There are no external authentication services configured. See <a href='http://go.microsoft.com/fwlink/?LinkId=252166'>this article</a> for details on setting up this ASP.NET application to support logging in via external services.".Localize())</p>
    </div>
}
else
{
    using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }))
    {
    @Html.AntiForgeryToken()
    <fieldset id="socialLoginList">
        <legend>@("Log in using another service".Localize())</legend>
        <p>
        @foreach (var p in Model)
        {          
            <button type="submit" name="provider" style="border: 0" value="@p.AuthenticationClient.ProviderName" title="@("Log in using your {0} account".Localize(p.DisplayName))">
                <img alt="@p.DisplayName" style="border: 0" src="@Href(String.Format("~/content/themes/default/images/social/{0}.png", p.AuthenticationClient.ProviderName))"/>
             </button>
        }
        </p>
    </fieldset>
    }
}
